<div class="container" style="margin-top:60px">

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_name %><br />
    <%= f.text_field :event_name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
     <%= f.date_select(:date,:start_year => 1950,order: [:day, :month, :year],:id=>"form-field-2") %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description,:id=>"form-field-2",:rows=>"4" ,:style => "width:365px", :maxlength => 2000 %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br/>
    <%= f.text_field :tel %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>