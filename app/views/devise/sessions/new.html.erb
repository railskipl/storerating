<div class="container" style="margin-top:60px">
<div class="shadow">
<div>
<h2>Sign in</h2>
<div class="form-horizontal">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div class="control-group">
		<label class="control-label" for="form-field-2"><%= f.label :email %></label>
        
		     <div class="controls">
			   	<%= f.email_field :email, :autofocus => true,:id=>"form-field-2" %>
								
			</div>
  </div>
  

  <div class="control-group">
		<label class="control-label" for="form-field-2"><%= f.label :password %></label>

		    <div class="controls">
			   <%= f.password_field :password,:id=>"form-field-2" %>
										
		    </div>
  </div>


 
 <div style="padding-left:180px">
 	<% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  <%= submit_tag "sign in", :id=>"signin_submit", :class=> "btn btn-primary" %>
  <%= render "devise/shared/links" %>
  <span class="extra_buttons">
</span>
</div>
<% end %>

    </div>
  </div>
 </div>
</div>


