
 <div class="container" style="margin-top:60px">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>
  <div class="control-group">
              <label class="control-label" for="form-field-2"><%= f.label "Business Name"%></label>

                  <div class="controls">
                    <label>
                    <%= f.text_field :business_name,:id=>"form-field-2" %>
                    </label>
                  </div>
                </div>
                
                
                
                
                <div class="control-group">
                  <label class="control-label" for="form-field-2"><%= f.label "Business Logo" %></label>

                  <div class="controls">
                    <%= f.file_field :photo %>
                    
                  </div>
                </div>
                
                
                
                <div class="control-group">
                  <label class="control-label" for="form-field-2"><%= f.label "Business Website" %></label>

                  <div class="controls">
                      <%= f.text_field :business_website,:id=>"form-field-2" %>
                    
                  </div>
                </div>

                         

                           <div class="control-group">
                  <label class="control-label" for="form-field-2"><%= f.label "Business Facebook" %></label>

                  <div class="controls">
                    <%= f.text_field :business_facebook,:id=>"form-field-2" %>
                    
                  </div>
                </div>
                
                
                <div class="control-group">
                  <label class="control-label" for="form-field-2"><%= f.label "Business Twitter" %></label>

                  <div class="controls">
                    <%= f.text_field :business_twitter,:id=>"form-field-2" %>
                    
                  </div>
                </div>
                
                
                <div class="control-group">
                  <label class="control-label" for="form-field-2"><%= f.label "Year round business" %></label>

                  <div class="controls">
                    <label>
                     Yes <%= f.radio_button :year_round_business, "yes" %>
                                      No <%= f.radio_button :year_round_business, "no" %>
 
                    </label>
                  </div>
                </div>
                
            
                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business Location" %></label>

                  <div class="controls">
                  Openair <%= f.radio_button :business_location , "openair" %>
                                   Indoor <%= f.radio_button :business_location , "indoor" %>
                    
                    
                  </div>
                </div>
                
                
                
                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business Telephone" %></label>

                  <div class="controls">
                  <%= f.text_field :business_tel,:id=>"form-field-2" %>
                  
                  </div>
                </div>
                
                
                
                
                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business Fax"%></label>

                  <div class="controls">
                  
                    <%= f.text_field :business_fax,:id=>"form-field-2" %>
                    
                  </div>
                </div>
                          
                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business country"%></label>

                  <div class="controls">
                  
                    <%= f.select(:location,Country.all.map {|country| [ country.name,country.name ] } ,:prompt =>"Select Country" ) %>
                    
                  </div>
                </div>



                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business Zipcode"%></label>

                  <div class="controls">
                  
                    <%= f.text_field :zipcode,:id=>"form-field-2" %>
                    
                  </div>
                </div>



                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Manager name"%></label>

                  <div class="controls">
                  
                    <%= f.text_field :manager_name,:id=>"form-field-2" %>
                    
                  </div>
                </div>


                            <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Business Address"%></label>

                  <div class="controls">
                  
                    <%= f.text_area :address,:id=>"form-field-2",:rows=>"4" ,:style => "width:365px", :maxlength => 2000 %>
                    
                  </div>
                </div>




                            <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "City"%></label>

                  <div class="controls">
                  
                    <%= f.text_field :city,:id=>"form-field-2",:rows=>"4" ,:style => "width:365px", :maxlength => 2000 %>
                    
                  </div>
                </div>


                             <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Year Business Established in"%></label>

                  <div class="controls">
                  
                    <%= f.date_select(:business_established_in,:start_year => 1950,order: [:day, :month, :year],:id=>"form-field-2") %>
                    
                    
                  </div>
                </div>


                <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Family owned business"%></label>

                  <div class="controls">
                  
                    Yes <%= f.radio_button :family_owned_business , "yes" %>
                                        No <%= f.radio_button :family_owned_business  , "no" %>
                    
                    
                  </div>
                </div>





                            <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Describe your business"%></label>

                  <div class="controls">
                  
                    <%= f.text_area :describe_business,:id=>"form-field-2",:rows=>"4" ,:style => "width:365px", :maxlength => 2000 %>
                    
                  </div>
                </div>


                              <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Does your business offer organic products"%></label>

                  <div class="controls">
                  
                    Yes <%= f.radio_button :business_offer_op , "yes" %>
                                        No <%= f.radio_button :business_offer_op  , "no" %>
                  </div>
                </div>

                            
                            <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Does your business offer fish market on premises"%></label>

                  <div class="controls">
                  
                    Yes <%= f.radio_button :fm_onpremises , "yes" %>
                                        No <%= f.radio_button  :fm_onpremises , "no" %>
                  </div>
                </div>


                             <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Does your Business offer deli market on premises"%></label>

                  <div class="controls">
                  
                    Yes <%= f.radio_button :dl_onpremises , "yes" %>
                                        No <%= f.radio_button  :dl_onpremises , "no" %>
                  </div>
                </div>

                              <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Does your Business deliver to customers"%></label>

                  <div class="controls">
                  
                    Yes <%= f.radio_button :bdeliver_customer , "yes" %>
                                        No <%= f.radio_button :bdeliver_customer  , "no" %>
                  </div>
                </div>


                     <div class="control-group">
                  <label for="form-field-2" class="control-label"><%= f.label "Is Business listed with BBB"%></label>

                  <div class="controls">
                     
                    Yes <%= f.radio_button :business_with_BBB , "yes" %>
                                        No <%= f.radio_button :business_with_BBB  , "no" %>
                  </div>
                </div>

<%= f.hidden_field :role_id ,:value =>  Role.find_by(name: "business").id %>

  <div><%= f.submit "Update"%></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
</div>