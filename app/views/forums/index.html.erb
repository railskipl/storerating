<div class="container" style="margin-top:60px">

<h1>Listing forums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%= forum.name %></td>
    <td><%= forum.content %></td>
    <% if current_user == forum.user %>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% else %> 
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Forum', new_forum_path %><br/>
<%= link_to 'Back', dashboard_index_path %>
</div>

